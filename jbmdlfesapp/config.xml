<?xml version='1.0.2' encoding='utf-8'?>
<widget id="net.mobilewebapp.jbmdlfesapp" version="0.5.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>JBMDLFesApp</name>
    <description>
        A sample Apache Cordova application that provides mapping info for JBMDL FES
    </description>
    <author email="aellison@mobilewebapp.net" href="http://mobilewebapp.net">
        Anthony Ellison
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <!-- Build and prepare the Angular 2 dev application.-->
    <!-- Build and prepare the Angular 2 dev application. -->
    <hook type="before_prepare" src="../ngbuildprod.js"/>
    <platform name="android">
        <allow-intent href="market:*" />
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="./icons/icon-36x36.png" density="ldpi" />
        <icon src="./icons/icon-48x48.png" density="mdpi" />
        <icon src="./icons/icon-72x72.png" density="hdpi" />
        <icon src="./icons/icon-96x96.png" density="xhdpi" />
        <icon src="./icons/icon-144x144.png" density="xxhdpi" />
        <icon src="./icons/icon-192x192.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
